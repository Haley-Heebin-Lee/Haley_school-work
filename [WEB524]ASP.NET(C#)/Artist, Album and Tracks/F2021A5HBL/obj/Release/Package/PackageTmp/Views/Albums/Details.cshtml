@model F2021A5HBL.Models.AlbumWithDetailViewModel

@{
    ViewBag.Title = "Details";
    var numOfTracks = Model.Tracks.Count();
    var numOfArtists = Model.Artists.Count();
}

<h2>Details - @Model.Name</h2>

<div>
    <h4>Album details</h4>
    <hr />
    <dl class="dl-horizontal">

        <dt>
            @Html.DisplayNameFor(model => model.Name)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Name)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.ReleaseDate)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.ReleaseDate)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.UrlAlbum)
        </dt>

        <dd>
            <img src="@Html.DisplayFor(model=>model.UrlAlbum)" alt="@Html.DisplayFor(model=>model.Name)" with="200" height="200" />
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Genre)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Genre)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Coordinator)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Coordinator)
        </dd>

        <dt>
            Number of tracks on this album
        </dt>

        <dd>
            @numOfTracks
        </dd>

        <dt>
            Number of artists on this album
        </dt>

        <dd>
            @numOfArtists
        </dd>

    </dl>
</div>
<p>
    @Html.ActionLink("Back to List", "Index") | @Html.ActionLink("Add Track to the album", "AddTrack", new { id = Model.Id })
</p>
