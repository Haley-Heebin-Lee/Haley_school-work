<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8" />
    <title>WEB322 Assignment3-5</title>
    <meta content="width=device-width, initial-scale=1" name="viewport" />
    <link type="text/css" rel="stylesheet" href="/css/style.css" />
    <link type="text/css" rel="shortcut icon" href="/css/style.css" />
    <script src="/script.js"></script>
  </head>

  <body>
    {{> header}}
    
      <div class="main-contents">
        {{> nav user}}
        <div class="wrapper-edit">
          
            <form action="/room/edit" method="POST">
              <p></p>
            {{#if editmode}}
                 <input type="hidden" name="ID" value="{{room._id}}" />
                <input type="hidden" name="edit" value="1" />
                <h4>Editing Room ID: {{room._id}}</h4>
            {{else}}
                <input type="hidden" name="edit" value="0" />
                <label>ID</label><input type="number" name="ID" /><br/>
            {{/if}}
            <div class="form-edit">
              <labe>Title:</label>
              <input type="text" name="title" value="{{room.title}}" required><br/>
            </div>
            <div class="form-edit">
              <labe>Price:</label>
              <input type="number" name="price" value="{{room.price}}" required><br/>
            </div>
            <div class="form-edit">
              <labe>Description:</label>
              <input type="text" name="desc" value="{{room.desc}}" required><br/>
             </div>
             <div class="form-edit">
              <labe>Location:</label>
              <input type="text" name="roomLocation" value="{{room.location}}" required><br/>
            </div>
            <div class="form-edit">
              <labe>Image Link:</label>
              <input type="text" name="roomImg" value="{{room.roomImg}}" required><br/>
            </div>
            <div class="form-edit">
              <labe>Rating:</label>
              <input type="number" name="rate" value="{{room.rate}}" required><br/>
            </div>
            <div class="form-edit">
              <labe>Review Number:</label>
              <input type="number" name="review" value="{{room.review}}" required><br/>
            </div>
              <hr>

              <button type="submit" name="submit" class="btn btn-submit">Submit</button>
              
            </form>
            
          </div>
      </div>
     {{> footer}}
    

  </body>
</html>